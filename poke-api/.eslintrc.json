{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "no-unused-vars": ["warn"],
    "no-console": "off",
    "comma-dangle": ["error", "always-multiline"],
    "indent": ["error", 2]
  }
}
